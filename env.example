# Thermal Inspection System - Environment Variables
# ================================================

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./thermal_inspection.db
# For PostgreSQL: postgresql://user:password@localhost/thermal_inspection

# File Upload Settings
UPLOAD_DIR=./static/thermal_images
PROCESSED_DIR=./static/processed_images
REPORTS_DIR=./static/reports
MAX_FILE_SIZE=26214400  # 25MB in bytes

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AI Model Settings
MODEL_CACHE_DIR=./models
YOLO_MODEL_URL=https://sghub.deci.ai/models/yolo_nas_s_coco.pth
ENABLE_MODEL_DOWNLOAD=true

# Thermal Analysis Settings
DEFAULT_AMBIENT_TEMPERATURE=25.0
POTENTIAL_HOTSPOT_THRESHOLD=20.0
CRITICAL_HOTSPOT_THRESHOLD=40.0

# Email Settings (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=thermal-system@company.com

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_DIR=./logs
ENABLE_PERFORMANCE_MONITORING=true

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false 